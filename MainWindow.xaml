<Window x:Class="JakStartScreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JakStartScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="48" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}">
            <Button x:Name="btnSettings" Content="Set" Height="{Binding ActualWidth, ElementName=btnSettings, Mode=OneWay}" />
        </StackPanel>
        <WrapPanel Grid.Column="1" Orientation="Vertical"/>

    </Grid>
</Window>
